{
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/common/v2.0",
          "clientIdSettingName": "AAD_CLIENT_ID",
          "clientSecretSettingName": "AAD_CLIENT_SECRET"
        }
      }
    }
  },
  "routes": [
    {
      "route": "/api/cases",
      "methods": ["POST", "DELETE"],
      "allowedRoles": ["faculty", "admin"]
    },
    {
      "route": "/api/cases",
      "methods": ["GET"],
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/user",
      "methods": ["GET", "POST"],
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/api/admin/*",
      "methods": ["GET", "POST"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "/.auth/login/github",
      "statusCode": 404
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html"
  },
  "responseOverrides": {
    "401": {
      "rewrite": "/401.html"
    },
    "404": {
      "rewrite": "/404.html"
    }
  },
  "globalHeaders": {
    "content-security-policy": "default-src https: 'unsafe-inline' 'unsafe-eval' data:; img-src 'self' data: https:;"
  },
  "mimeTypes": {
    ".json": "application/json"
  }
}
